<Window x:Class="Lab1_Wpf_Var14_Product.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная №1 — Часть 1 — Вариант 14 (Товар)"
        Height="380" Width="640"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Text="Часть 1 (WPF). Вариант 14: Товар (наименование, цена в рублях, изготовитель)"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Наименование товара"/>
                <TextBox x:Name="TbName" Margin="0,6,0,0" />
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Цена (RUB)"/>
                <TextBox x:Name="TbPriceRub"
                         Margin="0,6,0,0"
                         PreviewTextInput="DecimalOnly_PreviewTextInput"
                         PreviewKeyDown="NoSpace_PreviewKeyDown"/>
            </StackPanel>

            <StackPanel Grid.Column="4">
                <TextBlock Text="Изготовитель"/>
                <TextBox x:Name="TbManufacturer" Margin="0,6,0,0"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Курс (руб/€)"/>
                <TextBox x:Name="TbRate"
                         Margin="0,6,0,0"
                         Text="100"
                         PreviewTextInput="DecimalOnly_PreviewTextInput"
                         PreviewKeyDown="NoSpace_PreviewKeyDown"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Увеличение (%) если Samsung"/>
                <TextBox x:Name="TbPercent"
                         Margin="0,6,0,0"
                         Text="10"
                         PreviewTextInput="DecimalOnly_PreviewTextInput"
                         PreviewKeyDown="NoSpace_PreviewKeyDown"/>
            </StackPanel>

            <TextBlock Grid.Column="4"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,2"
                       Foreground="Gray"
                       Text="Валидация: цифры и десятичный разделитель (точка/запятая), пробел запрещён."/>
        </Grid>

        <StackPanel Grid.Row="6" Orientation="Horizontal">
            <Button Content="Метод 1: Цена в евро"
                    Padding="12,8"
                    Click="BtnToEuro_Click"/>
            <Button Content="Метод 2: Увеличить в евро, если Samsung"
                    Margin="12,0,0,0"
                    Padding="12,8"
                    Click="BtnIncIfSamsung_Click"/>
            <Button Content="Очистить"
                    Margin="12,0,0,0"
                    Padding="12,8"
                    Click="BtnClear_Click"/>
        </StackPanel>

        <Border Grid.Row="7"
                Margin="0,12,0,0"
                Padding="12"
                Background="#FFF5F5F5"
                BorderBrush="#FFE1E1E1"
                BorderThickness="1"
                CornerRadius="6">
            <StackPanel>
                <TextBlock Text="Результат:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TbResult"
                           Margin="0,6,0,0"
                           FontSize="14"
                           Text="—"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
